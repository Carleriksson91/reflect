@{ Layout = "~/Features/Layouts/beer.cshtml";}
@model HomeViewModel

<form action="/Home/Ask" method="post">
    <div class="form-group">
        <label for="title">Titel</label>
        <input type="text" class="form-control" name="title" id="title" />
    </div>
    <div class="form-group">
        <label for="question">Fråga</label>
        <textarea name="content" class="form-control" id="question"></textarea>
    </div>
    <button type="submit" class="btn btn-default btn-xl">Fråga</button>
</form>



